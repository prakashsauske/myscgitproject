.tableScroller {
	cursor: pointer;
}

.tableScroller .scrollLeft {
	width: 20px;
	height: 40px;
	background: url(../images/tableScrollLeft.png) 97% no-repeat;
	float: right;
	position: fixed;
	margin: 65px -20px;
	-webkit-user-select: none; /* Chrome/Safari */
	-moz-user-select: none; /* Firefox */
	-ms-user-select: none; /* IE10+ */
}

.tableScroller .scrollLeft:hover {
	width: 20px;
	height: 40px;
	background: url(../images/tableScrollLeftHover.png) 97% no-repeat;
	float: right;
	position: fixed;
	margin: 65px -20px;
}

.tableScroller .scrollRight {
	width: 20px;
	height: 40px;
	background: url(../images/tableScrollRight.png) 97% no-repeat;
	float: right;
	position: fixed;
	margin: 65px 1004px;
	-webkit-user-select: none; /* Chrome/Safari */
	-moz-user-select: none; /* Firefox */
	-ms-user-select: none; /* IE10+ */
}

.tableScroller .scrollRight:hover {
