
.sf-menu{
	margin: 0;
	padding: 0;
	list-style: none;
	line-height: 30px;
}

	

.sf-menu li {
	/*position: relative;  Commented for NavBar Animation*/
	padding-right:2px;
}

	.sf-menu li li {
		position: relative;
		border-top:0;	
		padding-right:0;
	}



.sf-menu ul {
	position: absolute;
	display: none;
	left: 0;
	z-index: 105;
	
}

.sf-menu>li {
	float: left;
}

.sf-menu li:hover>ul,.sf-menu li.sfHover>ul {
	display: block;
}

.sf-menu a {
	display: block;
	position: relative;
	
}

.sf-menu ul ul {
	top: 0;
	left: 100%;
}



